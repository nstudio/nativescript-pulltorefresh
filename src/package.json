  "peerDependencies": {
    "tns-core-modules": "^3.0.0 || >=4.0.0 || >=4.1.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nativescript-ui-listview": "^5.2.0",
    "prettier": "^1.16.4",
